#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m;

	do {

		cout << "Введите порядок квадратной матрицы M (M - нечётное число) : ";
		cin >> m;
		cout << endl;

	} while ((m % 2 == 0) || (m < 0));

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) 
		matrix[i] = new double[m];

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++)
		for (int j = 0; j < m; j++) 
			cin >> matrix[i][j];

	cout << endl;
	cout << "Результат : " << endl;

	for (int i = 0; i < (m / 2); i++) {
		for (int j = i; j < (m - i); j++)
			cout << matrix[j][i] << ends;
		for (int k = (i + 1); k <= (m - i - 1); k++)
			cout << matrix[m - i - 1][k] << ends;
		for (int j = (m - i - 2); j >= i; j--)
			cout << matrix[j][m - i - 1] << ends;
		for (int k = (m - i - 2); k >= i + 1; k--) 
			cout << matrix[i][k] << ends;
	}

	cout << matrix[m / 2][m / 2] << endl;

	cout << endl;
	system("pause");
	return 0;

}
