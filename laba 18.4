#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m, n, num;
	double average;

	do {

		cout << "Введите количество строк и столбцов в матрице M x N ( M,N > 0) : ";
		cin >> m >> n;
		cout << endl;

	} while ((m < 0) || (n < 0));

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) 
		matrix[i] = new double[n];

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++)
		for (int j = 0; j < n; j++) 
			cin >> matrix[i][j];

	cout << "Результат : " << endl;

	for (int i = 0; i < n; i++) {
		average = 0;
		num = 0;
		for (int j = 0; j < m; j++)
			average += matrix[j][i];
		average /= m;
		for (int j = 0; j < m; j++)
			if (matrix[j][i] > average)
				num++;
		cout << i + 1 << " столбец - " << num << endl;
	}

	cout << endl;
	system("pause");
	return 0;

}
