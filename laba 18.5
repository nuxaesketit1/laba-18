#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m, n, num = 0;

	do {

		cout << "Введите количество строк и столбцов в матрице M x N ( M,N > 0) : ";
		cin >> m >> n;
		cout << endl;

	} while ((m < 0) || (n < 0));

	int** matrix = new int*[m];
	for (int i = 0; i < m; i++) 
		matrix[i] = new int[n];

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++)
		for (int j = 0; j < n; j++) 
			cin >> matrix[i][j];

	cout << "Результат : " << endl;

	for (int i = 0; i < n; i++) {
		for (int j = 0; j < m; j++)
			if (matrix[j][i] % 2 == 1)
				num++;
		num++;
		if (num > m) {
			cout << i + 1 << " - столбец" << endl;
			break;
		}
		num = 0;
	}

	if (num == 0)
		cout << "0" << endl;

	cout << endl;
	system("pause");
	return 0;

}
