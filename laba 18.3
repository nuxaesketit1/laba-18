#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int m, n, c;
	double p_min = 1, p;

	do {

		cout << "Введите количество строк и столбцов в матрице M x N ( M,N > 0) : ";
		cin >> m >> n;
		cout << endl;

	} while ((m < 0) || (n < 0));

	double** matrix = new double*[m];
	for (int i = 0; i < m; i++) 
		matrix[i] = new double[n];

	cout << "Введите каждый элемент матрицы : " << endl;

	for (int i = 0; i < m; i++)
		for (int j = 0; j < n; j++) 
			cin >> matrix[i][j];

	for (int i = 0; i < n; i++) {
		p = 1;
		for (int j = 0; j < m; j++)
			p *= matrix[j][i];
		if ((p < p_min) || (i == 0)) {
			p_min = p;
			c = i;
		}
	}

	cout << "Результат : " << endl;
	cout << "Номер столбца с наименьшим значением ( " << p_min << " ) равен " << c+1 << endl;

	cout << endl;
	system("pause");
	return 0;

}
